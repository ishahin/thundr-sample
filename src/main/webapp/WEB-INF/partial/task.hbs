<article id="{{id}}" class="task media">

	<div class="span1" style="font-size: 4em;">
	  	{{#if status.done}}
	  		<i class="media-object icon icon-thumbs-up" style="color: #BDB"></i>
	  	{{else}}
	  	{{#if status.underway}}
	  		<i class="media-object icon icon-hand-right" style="color: #A0C0EE"></i>
	  	{{else}}
	  	 	<i class="media-object icon icon-thumbs-down" style="color: #CCC"></i>
		{{/if}}
	  	{{/if}}
  	</div>
  	
	<div class="media-body span7">
	    <h4 class="media-heading">
	    	<a href="/task/{{id}}">{{title}}</a>	
	    </h4>
		<div>
			{{description}}
		</div>
  	</div>
  	
  	<div class="span3">
  		
	  	{{#if status.done}}
			<a href="/task/{{id}}/stop" class="btn">Reset</a>
	  		<a href="/task/{{id}}/archive" class="btn">Archive</a>
	  	{{else}}
	  	{{#if status.underway}}
	  		<a href="/task/{{id}}/stop" class="btn">Reset</a>
	  		<a href="/task/{{id}}/done" class="btn btn-success">Done</a>
	  	{{else}}
	  	 	<a href="/task/{{id}}/start" class="btn">Start</a>
	  	 	<a href="/task/{{id}}/archive" class="btn">Archive</a>
	  	{{/if}}
	  	{{/if}}
 	</div>
</article>